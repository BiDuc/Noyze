<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:descendantFocusability="afterDescendants"
    android:gravity="start|center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:baselineAligned="false"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:weightSum="1.0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:background="?android:attr/selectableItemBackground"
            android:layout_gravity="center_vertical"
            android:id="@id/stream_icon"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            tools:src="@drawable/oppo_ic_audio_ring_notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <SeekBar
            style="?android:attr/seekBarStyle"
            android:id="@android:id/progress"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:minHeight="30dp"
            android:maxHeight="30dp"
            android:indeterminate="false"
            android:progress="50"
            android:progressDrawable="@drawable/oppo_progress_horizontal"
            android:thumb="@drawable/oppo_seek_thumb"
            android:layout_weight="1" />
        <ImageButton
            android:layout_gravity="center_vertical"
            android:id="@id/expand_button"
            android:focusable="true"
            tools:visibility="visible"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/oppo_volume_panel_expand_settings" />
    </LinearLayout>
    <ImageView
        android:id="@id/divider"
        tools:visibility="visible"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/oppo_menu_divider_horizontal_bright"
        android:scaleType="fitXY" />
</LinearLayout>