<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:persistentDrawingCache="animation|scrolling"
    android:descendantFocusability="afterDescendants"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <me.barrasso.android.volume.ui.MaxWidthLinearLayout
        app:maxWidth="@dimen/volume_panel_width"
        android:layout_gravity="center_horizontal"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:id="@id/visible_panel"
        android:background="@drawable/oppo_alertdialog_content_full_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@id/slider_group"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">
            <!-- Sliders go here -->
            <!-- <include tools:layout="@layout/oppo_volume_adjust_item" /> -->
        </LinearLayout>
    </me.barrasso.android.volume.ui.MaxWidthLinearLayout>
</FrameLayout>